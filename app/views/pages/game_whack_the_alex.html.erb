.game {
  width: 600px;
  height: 400px;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.hole {
  flex: 1 0 33.33%;
  overflow: hidden;
  position: relative;
  color: blue;
}

.hole:after {
  display: block;
  background: url(https://res.cloudinary.com/alexmry/image/upload/v1631178908/profil%20picture%20Alex/Screenshot_2021-09-09_at_11.13.58-removebg-preview_dem0ib.png) bottom center no-repeat;
  background-size: contain;
  content: '';
  width: 100%;
  height:70px;
  position: absolute;
  z-index: 2;
  bottom: -30px;
